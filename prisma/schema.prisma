generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  phone        String   @unique
  name         String?
  email        String?  @unique
  passwordHash String
  createdAt    DateTime @default(now())
  // Relations
  reservations Reservation[]
}

model Restaurant {
  id        String   @id @default(cuid())
  name      String   @unique
  logoUrl   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // Relations
  reservations Reservation[]
  menuItems MenuItemOnRestaurant[]
}

model MenuItem {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  logoUrl   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // Relations
  ingredients Ingredient[]
  restaurants MenuItemOnRestaurant[]
}

model Ingredient {
  id         String   @id @default(cuid())
  name       String
  mandatory  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // relation to menu item
  menuItemId String
  menuItem   MenuItem @relation(fields: [menuItemId], references: [id])
}

model Reservation {
  id            String   @id @default(cuid())
  restaurantId  String
  restaurant    Restaurant @relation(fields: [restaurantId], references: [id])
  userId        String?
  user          User?     @relation(fields: [userId], references: [id])
  fromDate      DateTime
  toDate        DateTime?
  partySize     Int?
  note          String?
  createdAt     DateTime @default(now())
}

model MenuItemOnRestaurant {
  id           String   @id @default(cuid())
  menuItemId   String
  restaurantId String
  createdAt    DateTime @default(now())

  menuItem     MenuItem   @relation(fields: [menuItemId], references: [id])
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])

  @@unique([menuItemId, restaurantId])
}

model Cart {
  id        String     @id @default(cuid())
  userId    String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  items     CartItem[]

  @@index([userId])
}

model CartItem {
  id         String   @id @default(cuid())
  cartId     String
  // client-generated id for idempotency (optional)
  clientItemId String?
  menuItemId String
  name       String
  ingredients Json?
  quantity   Int      @default(1)
  price      String?
  addedAt    DateTime @default(now())

  cart Cart @relation(fields: [cartId], references: [id])

  @@index([cartId])
  @@unique([cartId, clientItemId])
}
