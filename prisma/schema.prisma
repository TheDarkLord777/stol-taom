generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  phone        String   @unique
  name         String?
  email        String?  @unique
  passwordHash String
  createdAt    DateTime @default(now())
  // Relations
  reservations Reservation[]
  // Orders placed by the user
  orders       Order[]
  // Restaurants this user manages
  managedRestaurants RestaurantManager[]
}

model Restaurant {
  id        String   @id @default(cuid())
  name      String   @unique
  logoUrl   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // Relations
  reservations Reservation[]
  menuItems MenuItemOnRestaurant[]
  capacity RestaurantCapacity?
  // Branches (physical locations)
  branches Branch[]
  // Managers (many-to-many via RestaurantManager)
  managers RestaurantManager[]
}

model MenuItem {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  logoUrl   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // Relations
  ingredients Ingredient[]
  restaurants MenuItemOnRestaurant[]
}

model Ingredient {
  id         String   @id @default(cuid())
  name       String
  mandatory  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // relation to menu item
  menuItemId String
  menuItem   MenuItem @relation(fields: [menuItemId], references: [id])
}

model Reservation {
  id            String   @id @default(cuid())
  restaurantId  String
  restaurant    Restaurant @relation(fields: [restaurantId], references: [id])
  userId        String?
  user          User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  fromDate      DateTime
  toDate        DateTime?
  partySize     Int?
  note          String?
  createdAt     DateTime @default(now())
}

model MenuItemOnRestaurant {
  id           String   @id @default(cuid())
  menuItemId   String
  restaurantId String
  createdAt    DateTime @default(now())
  // When a MenuItem is deleted, remove the linking rows in MenuItemOnRestaurant
  // When a Restaurant is deleted, remove its linking rows as well.
  // This uses referential cascade so you can delete the parent and the links are cleaned automatically.
  menuItem     MenuItem   @relation(fields: [menuItemId], references: [id], onDelete: Cascade)
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  // per-restaurant override price (string to keep parity with existing price strings)
  priceOverride  String?
  // whether this item is available at this restaurant/branch
  available      Boolean  @default(true)

  @@unique([menuItemId, restaurantId])
}

model RestaurantCapacity {
  id            String     @id @default(cuid())
  restaurantId  String     @unique
  table2        Int        @default(5)
  table4        Int        @default(5)
  table6        Int        @default(5)
  table8        Int        @default(5)
  updatedAt     DateTime   @updatedAt
  createdAt     DateTime   @default(now())

  restaurant    Restaurant @relation(fields: [restaurantId], references: [id])
}

model RestaurantManager {
  id           String   @id @default(cuid())
  restaurantId String
  userId       String
  createdAt    DateTime @default(now())

  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([restaurantId, userId])
  @@index([userId])
}

model Cart {
  id        String     @id @default(cuid())
  userId    String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  items     CartItem[]

  @@index([userId])
}

model CartItem {
  id         String   @id @default(cuid())
  cartId     String
  // which restaurant this cart item is associated with (optional)
  restaurantId String?
  // client-generated id for idempotency (optional)
  clientItemId String?
  menuItemId String
  name       String
  ingredients Json?
  quantity   Int      @default(1)
  price      String?
  addedAt    DateTime @default(now())

  cart Cart @relation(fields: [cartId], references: [id])

  @@index([cartId])
  @@index([restaurantId])
  @@unique([cartId, clientItemId])
}

model Order {
  id           String      @id @default(cuid())
  userId       String?
  user         User?       @relation(fields: [userId], references: [id], onDelete: Cascade)
  status       String      @default("pending")
  paymentMethod String?
  total        String?
  createdAt    DateTime    @default(now())
  items        OrderItem[]

  @@index([userId])
}

model OrderItem {
  id           String   @id @default(cuid())
  orderId      String
  restaurantId String?
  menuItemId   String
  name         String
  ingredients  Json?
  quantity     Int      @default(1)
  price        String?

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@index([restaurantId])
}

// Branch model: represents a physical location / filial belonging to a Restaurant
model Branch {
  id           String   @id @default(cuid())
  name         String
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  address      String?
  phone        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // relations
  // roles assigned scoped to this branch are stored in UserRole
  userRoles    UserRole[] @relation("branch_roles")
  tableAssignments TableAssignment[]

  @@index([restaurantId])
}

// Role definitions (seed core roles: OWNER, ADMIN, MANAGER, CHEF, KITCHEN, WAITER, CASHIER)
model Role {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())

  userRoles   UserRole[]
}

// UserRole: grants a Role to a user with an optional scope (global / restaurant / branch)
model UserRole {
  id        String   @id @default(cuid())
  userId    String
  roleId    String
  role      Role     @relation(fields: [roleId], references: [id])
  scopeType String   // 'global' | 'restaurant' | 'branch'
  scopeId   String?  // when scopeType != 'global' this references the id of the scope (restaurantId or branchId)
  createdAt DateTime @default(now())

  // optional relation helper to Branch when scopeType='branch'
  branch    Branch?  @relation("branch_roles", fields: [scopeId], references: [id])

  @@index([userId, scopeType, scopeId])
}

// TableAssignment: assign a waiter to a table in a branch (auditable)
model TableAssignment {
  id        String   @id @default(cuid())
  branchId  String
  tableName String
  waiterId  String
  active    Boolean  @default(true)
  createdAt DateTime @default(now())

  branch    Branch   @relation(fields: [branchId], references: [id])
  @@index([branchId])
  @@index([waiterId])
}

